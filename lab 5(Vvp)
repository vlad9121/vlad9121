#include <iostream> 
#include <string> 
#include <math.h> 
#include <stdio.h> 
using namespace std; 

int main() 
{ 
setlocale(0, ""); 
float bite;
cout << "Задача 1 "<< '\n'; 
cout << "Введите объём файла в байтах: ";
cin >> bite;
int kb = bite / 1024;
cout << "Объём файла в килобайтах: " << kb << endl;
cout << "Задача 2 "<< '\n'; 
int A, B, n;
cout << "Введите длину отрезка A = ";
cin >> A;
cout << "Введите длину отрезка B = ";
cin >> B;
if (A > B && A > 0 && B > 0) {
    n = A / B;
    cout << "Количество отрезков B, размещённых на отрезке A: " << n << endl;
}
else {
    cout << "Числовые значения не удовлетворяют условиям "<< '\n'; 
}
cout << "Задача 3 "<< '\n'; 
int A1, B1, n1, k;
cout << "Введите длину отрезка A = ";
cin >> A1;
cout << "Введите длину отрезка B = ";
cin >> B1;
if (A1 > B1 && A1 > 0 && B1 > 0) {
    n1 = A1 / B1;
    k = A1 - n1*B1;
    cout << "Незанятая часть отрезка A: " << k << endl;
}
else {
    cout << "Числовые значения не удовлетворяют условиям "<< '\n'; 
}
cout << "Задача 4 "<< '\n'; 
int x, y;
cout << "Введите двузначное число ";
cin >> x;
if (x >= 10 && x <= 99) {
    y = x/10 + (x % 10)*10;
    cout << "Новое двузначное число = " << y << endl;
}
else {
    cout << "Числовое значение не удовлетворяет условию "<< '\n'; 
}
cout << "Задача 5 "<< '\n'; 
int z, o;
cout << "Введите трёхзначное число = ";
cin >> z;
if (z >= 100 && z <= 999) {
    y = z/100 + (z % 100)*10;
    cout << "Новое число = " << y << endl;
}
else {
    cout << "Числовое значение не удовлетворяет условию "<< '\n'; 
}




   return 0;
}
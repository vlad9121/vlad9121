#include <iostream>

using namespace std;

int main()
{
    setlocale(0, "");
    cout << "Задача 1 \n";
    float A, B;
    cout << "Введите А ";
    cin >> A;
    cout << "Введите B ";
    cin >> B;
    if (A>2 && B<=3) {
        cout <<"Условие верно \n";
    } else     cout <<"Условие неверно \n";


    cout << "Задача 2 \n";
    float A1, B1, C1;
    cout << "Введите А ";
    cin >> A1;
    cout << "Введите B ";
    cin >> B1;
    cout << "Введите C ";
    cin >> C1;
    if (A1<B1 && B1<C1) {
        cout <<"Условие верно \n";
    } else     cout <<"Условие НЕверно \n";

    cout << "Задача 3 \n";
    int A2, k;
    cout << "Введите число ";
    cin >> A2;
    k=A2 % 2;
    if (k == 0 && A2>9 && A2<100)  {
        cout <<"Данное число является четным двузначным \n";
    } else     cout <<"Данное число НЕ является четным двузначным \n";


    cout << "Задача 4 \n";
    int A3, a, b, c;
    cout << "Введите число ";
    cin >> A3;
    a=A3/100;
    b=A3/10;
    b=b%10;
    c=A3%10;
    if (a<b && b<c)  {
        cout <<"Цифры данного числа образуют возрастающую последовательность \n";
    } else    if (a>b && b>c) {
        cout <<"Цифры данного числа образуют убывающую последовательность\n";
    } else 
    cout <<"Цифры данного числа НЕ образуют возрастающую или убывающую последовательность\n";

     cout << "Задача 5 \n";
    int A4, a1, b1, c1,d1;
    cout << "Введите число ";
    cin >> A4;
    a1=A4/1000;
    b1=A4/100;
    b1=b1%10;
    c1=A4%100;
    c1=c1/10;
    d1=A4%10;
    if (a1==d1 && b1==c1)  {
        cout <<"Данное число читается одинаково слева направо и наоборот \n";
    } else     cout <<"Данное число НЕ читается одинаково слева направо и наоборот\n";



     cout << "Задача 6 \n";
    float  a2, b2, c2;
    cout << "Введите a ";
    cin >> a2;
    cout << "Введите b ";
    cin >> b2;
    cout << "Введите c ";
    cin >> c2;
    if ((a2*a2==b2*b2+c2*c2) || (b2*b2==a2*a2+c2*c2) || (c2*c2==a2*a2+b2*b2))  {
        cout <<"Треугольник со сторонами a, b, c является прямоугольным \n";
    } else     cout <<"Треугольник со сторонами a, b, c НЕ является прямоугольным\n";



    cout << "Задача 7 \n";
    float  a3, b3, c3;
    cout << "Введите a ";
    cin >> a3;
    cout << "Введите b ";
    cin >> b3;
    cout << "Введите c ";
    cin >> c3;
    if ((a3+b3)>c3 && (c3+b3)>a3 && (a3+c3)>b3)  {
        cout <<"Треугольник со сторонами a, b, c существует \n";
    } else     cout <<"Треугольник со сторонами a, b, c НЕ существует\n";



    return 0;
}